/* video-generator.wxss */
.container {
    padding: 20rpx;
    min-height: 100vh;
    background: #f5f5f5;
  }
  
  .section {
    background: white;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
  }
  
  /* 图片上传区域 */
  .image-uploader {
    width: 100%;
    height: 400rpx;
    border: 2rpx dashed #ddd;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fafafa;
  }
  
  .upload-placeholder {
    text-align: center;
    color: #999;
  }
  
  .upload-icon {
    font-size: 80rpx;
    display: block;
    margin-bottom: 20rpx;
  }
  
  .upload-text {
    font-size: 28rpx;
  }
  
  .selected-image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
  }
  
  /* 输入框 */
  .prompt-input {
    width: 100%;
    height: 200rpx;
    background: #f8f8f8;
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    box-sizing: border-box;
  }
  
  .char-count {
    text-align: right;
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  /* 按钮样式 */
  .generate-btn {
    width: 100%;
    height: 88rpx;
    background: #07C160;
    color: white;
    border-radius: 44rpx;
    font-size: 32rpx;
    border: none;
  }
  
  .generate-btn.generating {
    background: #ccc;
  }
  
  .generate-btn:disabled {
    background: #ccc;
    color: #999;
  }
  
  /* 进度条 */
  .progress-section {
    margin-top: 30rpx;
  }
  
  .progress-bar {
    width: 100%;
    height: 16rpx;
    background: #f0f0f0;
    border-radius: 8rpx;
    overflow: hidden;
  }
  
  .progress-inner {
    height: 100%;
    background: #07C160;
    transition: width 0.3s ease;
  }
  
  .progress-text {
    display: block;
    text-align: center;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  /* 视频区域 */
  .video-container {
    text-align: center;
  }
  
  .result-video {
    width: 100%;
    height: 400rpx;
    border-radius: 12rpx;
    background: #000;
  }
  
  /* 视频控制按钮 */
  .video-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin: 30rpx 0;
    justify-content: center;
  }
  
  .control-btn {
    flex: 1;
    min-width: 150rpx;
    height: 64rpx;
    line-height: 64rpx;
    background: #07C160;
    color: white;
    border-radius: 32rpx;
    font-size: 26rpx;
    border: none;
  }
  
  /* 分享按钮 */
  .share-section {
    margin-top: 20rpx;
  }
  
  .share-btn {
    width: 100%;
    height: 80rpx;
    background: #1AAD19;
    color: white;
    border-radius: 40rpx;
    font-size: 30rpx;
    border: none;
  }
  
  /* 重置按钮 */
  .reset-btn {
    width: 100%;
    height: 80rpx;
    background: transparent;
    color: #666;
    border: 2rpx solid #ddd;
    border-radius: 40rpx;
    font-size: 30rpx;
  }